{
    "compilerOptions": {
        "outDir": "dist",
        "lib": ["es6", "dom"],
        "module": "commonjs",
        "alwaysStrict": true,
        "experimentalDecorators": true,
        "noImplicitReturns": true,
        "forceConsistentCasingInFileNames": true,
        "declaration": true,
        "removeComments": false,
        "emitDecoratorMetadata": true,
        "typeRoots": [
			"node_modules/@types",
			"lib/types"
		],
        "types": [
            "@types/node"
        ]
    },
    "files": [ "src/index.ts" ],
    "include": [ "src/**/*.spec.ts" ]
}