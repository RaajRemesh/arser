{
    "compilerOptions": {
        "outDir": "dist",
        "lib": ["es6", "dom"],
        "module": "commonjs",
        "alwaysStrict": true,
        "experimentalDecorators": true,
        "noImplicitReturns": true,
        "forceConsistentCasingInFileNames": true,
        "removeComments": false,
        "emitDecoratorMetadata": true,
        "types": [
            "@types/node"
        ]
    },
    "files": [ "src/index.ts" ],
    "include": [ "src/**/*.spec.ts", "src/decorators/get-decorator-info.ts" ]
}